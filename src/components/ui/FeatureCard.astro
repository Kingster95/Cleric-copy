---
// Reusable Feature Card component
export interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt: string;
  reversed?: boolean; // true for odd cards (text left, image right), false for even cards (image left, text right)
  subtitle?: string;
  subtitleLogo?: string;
}

const { title, description, image, imageAlt, reversed = false, subtitle, subtitleLogo } = Astro.props;
---

<div class={`feature-card ${reversed ? 'reversed' : ''}`}>
  <div class="text-content">
    <h3 class="feature-title">{title}</h3>
    <p class="feature-description">{description}</p>
    {subtitle && (
      <div class="feature-subtitle">
        <span class="subtitle-text">{subtitle}</span>
        {subtitleLogo && (
          <img src={subtitleLogo} alt="Logo" class="subtitle-logo" />
        )}
      </div>
    )}
  </div>

  <div class="image-content">
    <div class="feature-panel">
      <img src={image} alt={imageAlt} class="feature-image" />
    </div>
  </div>
</div>

<style>
  .feature-card {
    width: clamp(320px, 62.08vw, 1192px);
    height: clamp(400px, 33.33vw, 640px);
    background: linear-gradient(90deg, #F7F9FA 0.05%, #F8F8F8 99.95%);
    border-radius: 16px;
    border: 1px solid #E5E7EB;
    transform: rotate(0deg);
    opacity: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    box-sizing: border-box;
    margin-bottom: 48px;
  }

  .feature-card.reversed {
    direction: rtl;
  }

  .feature-card.reversed > * {
    direction: ltr;
  }

  .text-content {
    width: clamp(320px, 25vw, 480px);
    height: 100%;
    max-width: 480px;
    padding-right: clamp(20px, 2.08vw, 40px);
    padding-left: clamp(20px, 2.08vw, 40px);
    gap: clamp(15px, 1.04vw, 20px);
    transform: rotate(0deg);
    opacity: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    box-sizing: border-box;
    text-align: left;
  }

  .feature-card.reversed .text-content {
    align-items: flex-start;
    text-align: left;
  }

  .feature-title {
    font-family: 'GT Alpina', var(--font-family-title);
    font-weight: 500;
    font-style: normal;
    font-size: clamp(28px, 2.08vw, 40px);
    line-height: 120%;
    letter-spacing: 0%;
    color: #313131;
    margin: 0 0 clamp(15px, 1.04vw, 20px) 0;
  }

  .feature-subtitle {
    display: flex;
    align-items: center;
    gap: clamp(8px, 0.5vw, 12px);
    margin: 0 0 clamp(15px, 1.04vw, 20px) 0;
  }

  .subtitle-text {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 500;
    font-style: normal;
    font-size: clamp(16px, 0.94vw, 18px);
    line-height: 140%;
    letter-spacing: 0%;
    color: #666666;
  }

  .subtitle-logo {
    width: clamp(48px, 2.81vw, 54px);
    height: clamp(48px, 2.81vw, 54px);
    object-fit: contain;
  }

  .feature-description {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 500;
    font-style: normal;
    font-size: clamp(16px, 0.94vw, 18px);
    line-height: 140%;
    letter-spacing: 0%;
    color: #666666;
    margin: 0;
  }

  .image-content {
    width: 100%;
    height: 100%;
    margin-top: 5%;
    transform: rotate(0deg);
    opacity: 1;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    box-sizing: border-box;
  }

  .feature-panel {
    width: 100%;
    height: calc(100% - clamp(20px, 2.08vw, 40px));
    border-radius: 16px;
    transform: rotate(0deg);
    opacity: 1;
    background: transparent;
    padding: 0;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .feature-panel::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 16px;
    pointer-events: none;
    z-index: 1;
  }

  .feature-card.reversed .feature-panel::after {
  }

  .feature-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 16px;
  }

  /* Mobile Styles */
  @media (max-width: 1023px) {
    .feature-card,
    .feature-card.reversed {
      grid-template-columns: 1fr;
      gap: 2rem;
      direction: ltr;
    }

    .text-content,
    .feature-card.reversed .text-content {
      width: 100%;
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
      align-items: center;
    }

    .image-content {
      width: 100%;
      max-width: 600px;
      margin: 0 auto;
    }
  }
</style>