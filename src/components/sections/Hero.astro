---
// Hero section component
import GradientOverlay from './GradientOverlay.astro';

export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`hero ${className}`}>
  <!-- Background -->
  <div class="hero-background"></div>

  <div class="container">
    <div class="hero-content">
      <!-- Press Release Badge -->
      <div class="press-badge">
        <span class="badge-label text-medium-regular">Press release</span>
        <span class="badge-text text-medium-regular">Cleric launches the first self-learning AI SRE</span>
        <img src="/arrow-up-right.png" alt="Arrow" class="badge-arrow" />
      </div>

      <!-- Main Heading -->
      <h1 class="hero-title desktop-title">
        The AI SRE That Learns<br>
        From Your Engineers
      </h1>

      <h1 class="hero-title mobile-title">
        The AI SRE That <br>
        Learns  From Your <br>
        Engineers
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle subtitle-regular desktop-subtitle">
        Cleric investigates production issues, captures what works,<br>
        and makes your whole team faster.
      </p>

      <p class="hero-subtitle subtitle-regular tablet-subtitle">
        Cleric investigates production issues, captures what works, and makes<br>
        your whole team faster.
      </p>

      <p class="hero-subtitle subtitle-regular mobile-subtitle">
        Cleric investigates production issues, captures<br>
        what works, and makes your whole team faster.
      </p>

      <!-- CTA Buttons -->
      <div class="hero-cta">
        <a href="/try-it-out" class="btn btn-primary">
          Start for Free
        </a>
        <a href="/try-it-out" class="btn btn-secondary">
          Request Demo
        </a>
      </div>
    </div>

    <!-- Product Interface Image -->
    <div class="hero-mockup">
      <img src="/hero_desktop.png" alt="Cleric AI SRE Platform Interface" class="hero-image" />
      <img src="/hero_phone.png" alt="Cleric Mobile Interface" class="hero-phone desktop-phone" />
      <img src="/hero_slack_mobile.png" alt="Cleric Mobile Interface" class="mobile-phone" />
    </div>
  </div>

  <!-- Gradient Overlay -->
  <GradientOverlay />
</section>

<style>
  .hero {
    position: relative;
    flex: 1;
    display: flex;
    align-items: flex-start;
    min-height: calc(100vh - 200px);
    padding-top: 4vh;
  }

  .hero-background {
    display: none;
  }

  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-4xl);
  }

  .hero-content {
    z-index: 2;
    max-width: 800px;
  }

  /* Press Badge */
  .press-badge {
    display: inline-flex;
    align-items: center;
    width: 482px;
    height: 49px;
    min-width: 482px;
    gap: 12px;
    background: #0000001A;
    backdrop-filter: blur(4px);
    border: 1px solid #0000001A;
    border-radius: var(--radius-press-badge);
    padding: 12px;
    margin-bottom: 48px;
    border-width: 1px;
    font-size: 0.875rem;
    color: var(--color-hero-text);
    transition: all var(--transition-normal);
    cursor: pointer;
    opacity: 1;
    white-space: nowrap;
    overflow: hidden;
  }

  .press-badge:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
  }

  .badge-label {
    width: 113px;
    height: 25px;
    min-width: 113px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #E1DEFE;
    color: rgba(49, 49, 49, 1);
    padding: 4px 12px;
    gap: 8px;
    border-radius: 4px;
    opacity: 0.8;
    white-space: nowrap;
    overflow: hidden;
    font-family: 'Cleric Sans Text', sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 14px;
    line-height: 120%;
    letter-spacing: -0.0025em;
    text-align: center;
    vertical-align: middle;
  }

  .badge-arrow {
    width: 16px;
    height: 16px;
    opacity: 0.8;
    object-fit: contain;
  }

  .badge-text {
    color: #ffffffb3;
  }

  /* Hero Title */
  .hero-title {
    color: var(--color-hero-text);
    margin: 0 0 var(--space-lg);
  }

  .mobile-title {
    display: none;
  }

  .desktop-title {
    display: block;
  }

  /* Hero Subtitle */
  .hero-subtitle {
    color: var(--color-hero-text-secondary);
    margin: 5% 0 var(--space-xl);
  }

  /* Default: Desktop subtitle visible */
  .desktop-subtitle {
    display: block;
  }

  .tablet-subtitle,
  .mobile-subtitle {
    display: none;
  }

  /* Tablet: 768px - 991px */
  @media (min-width: 768px) and (max-width: 991px) {
    .desktop-subtitle,
    .mobile-subtitle {
      display: none;
    }

    .tablet-subtitle {
      display: block;
    }
  }

  /* CTA Buttons */
  .hero-cta {
    display: flex;
    gap: 32px; /* Desktop gap */
    margin-bottom: var(--space-xl);
    justify-content: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 198px;
    height: 41px;
    min-width: 198px;
    padding: 12px 32px;
    gap: 8px;
    font-family: 'Cleric Sans Text', sans-serif;
    font-weight: 500;
    font-style: normal;
    font-size: 16px;
    line-height: 140%;
    letter-spacing: 0%;
    text-align: center;
    text-decoration: none;
    border-radius: 150px;
    transition: all var(--transition-normal);
    cursor: pointer;
    border: none;
    opacity: 1;
    white-space: nowrap;
    overflow: hidden;
  }

  .btn-primary {
    background-color: var(--color-btn-primary);
    color: #313131;
    box-shadow: var(--shadow-btn);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px 0 rgba(0, 0, 0, 0.15);
  }

  .btn-secondary {
    background-color: var(--color-btn-secondary);
    color: var(--color-btn-secondary-text);
    border: 2px solid var(--color-btn-secondary-border);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-1px);
  }

  /* Product Interface Image */
  .hero-mockup {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: flex-start;
  }

  .hero-image {
    width: 1112px;
    height: 648.6666870117188px;
    opacity: 1;
    border-radius: var(--radius-xl);
    box-shadow: 0px 3.38px 20.29px 0px rgba(39, 43, 49, 0.1);
  }

  .hero-phone {
    position: absolute;
    right: -5%;
    width: 320px;
    height: 441px;
    transform: rotate(0deg);
    opacity: 1;
    border-radius: var(--radius-lg);
    box-shadow: 0px 3.38px 64.5px 5px rgba(39, 43, 49, 0.1);
    top: 33%;
    z-index: 2;
  }

  .mobile-phone {
    display: none;
  }

  /* Mobile Styles */
  @media (max-width: 991px) {
    .container {
      gap: var(--space-2xl);
    }
    .hero-content{
      padding: 0;
    }
    .hero-cta {
      justify-content: center;
      flex-wrap: wrap;
      gap: 24px; /* Tablet gap */
    }

    .hero-image {
      width: 734px;
      height: 428.1666259765625px;
    }

    .hero-phone {
      width: 220px;
      height: 303px;
    }
    .interface-main {
      grid-template-columns: 1fr;
    }

    .interface-sidebar,
    .interface-sidebar-right {
      display: none;
    }
  }

  @media (max-width: 767px){
    .hero {
      height: 950px;
      max-height: 1080px;
      padding-bottom: 0;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      overflow: visible;
    }

    .hero-cta {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      gap: 16px; /* Mobile gap */
      flex-wrap: wrap;
    }

    .hero-image {
      display: none !important;
    }

    .desktop-phone {
      display: none !important;
    }

    .mobile-phone {
      display: block !important;
      width: 408px;
      height: 645px;
      transform: none;
      z-index: 1;
    }

    .mobile-title {
      display: block !important;
    }

    .desktop-title {
      display: none !important;
    }

    .desktop-subtitle,
    .tablet-subtitle {
      display: none !important;
    }

    .mobile-subtitle {
      display: block !important;
    }

    .hero-mockup {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      padding: 0;
      margin: 0;
    }

    .hero-phone {
      display: none !important;
    }

    .mobile-phone {
      display: block !important;
      width: 408px;
      height: 645px;
      position: static;
    }

    .btn {
      width: 190px;
      height: 49px;
      min-width: 190px;
      padding: 10px 24px;
      max-width: 250px;
      font-size: 18px;
    }
  }

  /* Additional responsive breakpoints for hero buttons */
  @media (max-width: 480px) {
    .btn {
      width: 190px;
      min-width: 190px;
      height: 49px;
      padding: 10px 24px;
      font-size: 18px;
    }

    .press-badge {
      width: auto;
      min-width: 280px;
      height: auto;
      padding: 8px 12px;
      flex-direction: row;
      text-align: left;
      gap: 8px;
    }
  }

  /* Additional responsive breakpoints for press badge */
  @media (max-width: 991px) {
    .press-badge {
      width: auto;
      min-width: 320px;
      max-width: 90%;
      height: auto;
      padding: 10px;
    }
  }

  @media (max-width: 767px) {
    .press-badge {
      width: 408px;
      height: 38px;
      gap: 8px;
      border-radius: 6px;
      border-width: 1px;
      padding: 8px;
    }

    .badge-label {
      width: 101px;
      height: 22px;
      opacity: 0.8;
      gap: 8px;
      border-radius: 4px;
      padding: 3px 8px;
      font-size: 12px;
    }

    .badge-text {
      font-family: 'Cleric Sans Text', sans-serif;
      font-weight: 400;
      font-style: normal;
      font-size: 12px;
      line-height: 140%;
      letter-spacing: 0.01em;
      vertical-align: middle;
      color: #ffffffb3;
    }
    .hero{
      padding-top: 0;
    }
  }

  @media (max-width: 991px) {
    .badge-label {
      width: auto;
      min-width: 90px;
      height: auto;
      padding: 3px 10px;
    }

    .badge-arrow {
      display: none;
    }
  }

  @media (min-width: 2560px) {
    .hero {
    padding-top: 2vh;
  }
  }
</style>