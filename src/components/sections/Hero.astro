---
// Hero section component
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`hero ${className}`}>
  <!-- Background -->
  <div class="hero-background"></div>

  <div class="container">
    <div class="hero-content">
      <!-- Press Release Badge -->
      <div class="press-badge">
        <span class="badge-label">Press release</span>
        <span class="badge-text">Cleric launches the first self-learning AI SRE</span>
        <svg class="badge-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>

      <!-- Main Heading -->
      <h1 class="hero-title">
        The AI SRE That Learns<br>
        From Your Engineers
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle">
        Cleric investigates production issues, captures what works,<br>
        and makes your whole team faster.
      </p>

      <!-- CTA Buttons -->
      <div class="hero-cta">
        <a href="/try-it-out" class="btn btn-primary">
          Start for Free
        </a>
        <a href="/try-it-out" class="btn btn-secondary">
          Request Demo
        </a>
      </div>
    </div>

    <!-- Product Interface Image -->
    <div class="hero-mockup">
      <img src="/hero_desktop.png" alt="Cleric AI SRE Platform Interface" class="hero-image" />
      <img src="/hero_phone.png" alt="Cleric Mobile Interface" class="hero-phone" />
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    flex: 1;
    display: flex;
    align-items: flex-start;
    overflow: hidden;
    min-height: calc(100vh - 200px);
    padding-top: 8vh;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 77.88%);
    pointer-events: none;
    z-index: 10;
  }

  .hero-background {
    display: none;
  }

  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-4xl);
  }

  .hero-content {
    z-index: 2;
    max-width: 800px;
  }

  /* Press Badge */
  .press-badge {
    display: inline-flex;
    align-items: center;
    width: 482px;
    height: 49px;
    min-width: 482px;
    gap: 12px;
    background: #0000001A;
    backdrop-filter: blur(4px);
    border: 1px solid #0000001A;
    border-radius: var(--radius-press-badge);
    padding: 12px;
    margin-bottom: var(--space-xl);
    font-size: 0.875rem;
    color: var(--color-hero-text);
    transition: all var(--transition-normal);
    cursor: pointer;
    opacity: 1;
    white-space: nowrap;
    overflow: hidden;
  }

  .press-badge:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
  }

  .badge-label {
    width: 113px;
    height: 25px;
    min-width: 113px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #E1DEFE;
    color: #313131;
    padding: 4px 12px;
    gap: 8px;
    border-radius: 4px;
    font-family: var(--font-family-subtitle);
    font-size: 14px;
    font-weight: 500;
    font-style: normal;
    line-height: 120%;
    letter-spacing: -0.25%;
    text-align: center;
    opacity: 0.8;
    white-space: nowrap;
    overflow: hidden;
  }

  .badge-text {
    font-weight: 500;
  }

  .badge-arrow {
    width: 16px;
    height: 16px;
    opacity: 0.8;
  }

  /* Hero Title */
  .hero-title {
    font-family: var(--font-family-title);
    font-size: var(--font-size-hero-title);
    font-weight: 400;
    color: var(--color-hero-text);
    line-height: 115%;
    margin: 0 0 var(--space-lg);
    letter-spacing: -2.5%;
  }

  /* Hero Subtitle */
  .hero-subtitle {
    font-family: var(--font-family-subtitle);
    font-size: var(--font-size-hero-subtitle);
    font-weight: 400;
    color: var(--color-hero-text-secondary);
    line-height: 125%;
    margin: 0 0 var(--space-2xl);
    letter-spacing: 0.75%;
  }

  /* CTA Buttons */
  .hero-cta {
    display: flex;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    justify-content: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 190px;
    height: 49px;
    min-width: 190px;
    padding: 12px 32px;
    gap: 8px;
    font-family: var(--font-family-subtitle);
    font-size: var(--font-size-hero-btn);
    font-weight: 500;
    font-style: normal;
    line-height: 140%;
    letter-spacing: 0%;
    text-align: center;
    text-decoration: none;
    border-radius: var(--radius-hero-btn);
    transition: all var(--transition-normal);
    cursor: pointer;
    border: none;
    opacity: 1;
    white-space: nowrap;
    overflow: hidden;
  }

  .btn-primary {
    background-color: var(--color-btn-primary);
    color: #313131;
    box-shadow: var(--shadow-btn);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px 0 rgba(0, 0, 0, 0.15);
  }

  .btn-secondary {
    background-color: var(--color-btn-secondary);
    color: var(--color-btn-secondary-text);
    border: 2px solid var(--color-btn-secondary-border);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-1px);
  }

  /* Product Interface Image */
  .hero-mockup {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: center;
  }

  .hero-image {
    width: 1112px;
    height: 648.6666870117188px;
    transform: rotate(0deg);
    opacity: 1;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-hero-mockup);
  }

  .hero-phone {
    position: absolute;
    bottom: 0%;
    right: -5%;
    width: 320px;
    height: 441px;
    transform: rotate(0deg);
    opacity: 1;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-hero-mockup);
    z-index: 2;
  }

  /* Mobile Styles */
  @media (max-width: 1023px) {
    .container {
      gap: var(--space-2xl);
    }

    .hero-title {
      font-size: clamp(2rem, 8vw, 3rem);
    }

    .hero-subtitle {
      font-size: clamp(1rem, 4vw, 1.25rem);
    }

    .hero-cta {
      justify-content: center;
      flex-wrap: wrap;
    }

    .interface-main {
      grid-template-columns: 1fr;
    }

    .interface-sidebar,
    .interface-sidebar-right {
      display: none;
    }
  }

  @media (max-width: 767px) {
    .hero {
      padding-top: 80px;
      min-height: auto;
      padding-bottom: var(--space-4xl);
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: auto;
      min-width: 160px;
      height: auto;
      padding: 10px 24px;
      max-width: 250px;
    }
  }

  /* Additional responsive breakpoints for hero buttons */
  @media (max-width: 480px) {
    .btn {
      width: auto;
      min-width: 140px;
      height: auto;
      padding: 8px 20px;
      font-size: 16px;
    }

    .press-badge {
      width: auto;
      min-width: 280px;
      height: auto;
      padding: 8px 12px;
      flex-direction: column;
      text-align: center;
      gap: 8px;
    }
  }

  /* Additional responsive breakpoints for press badge */
  @media (max-width: 1023px) {
    .press-badge {
      width: auto;
      min-width: 320px;
      max-width: 90%;
      height: auto;
      padding: 10px;
    }
  }

  @media (max-width: 767px) {
    .press-badge {
      width: auto;
      min-width: 280px;
      height: auto;
      padding: 8px 12px;
    }

    .badge-label {
      width: auto;
      min-width: 80px;
      height: auto;
      padding: 3px 8px;
      font-size: 12px;
    }
  }

  @media (max-width: 1023px) {
    .badge-label {
      width: auto;
      min-width: 90px;
      height: auto;
      padding: 3px 10px;
    }

    .badge-arrow {
      display: none;
    }
  }
</style>