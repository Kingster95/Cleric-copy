---
// Stats section component
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`stats ${className}`}>
  <div class="container">
    <div class="stats-grid">
      <div class="stat-item">
        <h3 class="stat-number">5 min</h3>
        <p class="stat-label">Time to Root Cause</p>
      </div>
      <div class="stat-item">
        <h3 class="stat-number">92%</h3>
        <p class="stat-label">Actionable Findings</p>
      </div>
      <div class="stat-item">
        <h3 class="stat-number">200,000+</h3>
        <p class="stat-label">Production-Grade Investigations</p>
      </div>
    </div>
  </div>
</section>

<style>
  .stats {
    position: relative;
    width: 100vw;
    height: auto;
    min-height: 200px;
    padding-top: 4.17vw; /* 80px / 1920px = 4.17% */
    padding-bottom: 2.08vw; /* 40px / 1920px = 2.08% */
    background: #FFFFFF;
    transform: rotate(0deg);
    opacity: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25vw; /* 24px / 1920px = 1.25% */
    text-align: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-number {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 600;
    font-style: normal;
    font-size: 44px;
    line-height: 114.99999999999999%;
    letter-spacing: -0.005em;
    text-align: center;
    color: #313131;
    margin: 0;
  }

  .stat-label {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 400;
    font-style: normal;
    font-size: 18px;
    line-height: 140%;
    letter-spacing: 0;
    text-align: center;
    color: #313131;
    margin: 0;
  }

  /* Tablet Styles */
  @media (min-width: 768px) and (max-width: 991px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, auto);
      gap: 1.5rem;
      max-width: 800px;
      margin: 0 auto;
    }

    .stat-item:nth-child(3) {
      grid-column: 1 / -1;
      justify-self: center;
      max-width: 400px;
    }

    .stats {
      margin-top: 10%;
    }
  }

  /* Mobile Styles */
  @media (max-width: 767px) {
    .stats {
      padding-top: 3rem;
      padding-bottom: 2rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .stat-number {
      font-size: 2.5rem;
    }

    .stat-label {
      font-size: 1.1rem;
    }
  }
</style>