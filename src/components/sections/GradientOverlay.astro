---
// Gradient overlay component
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class={`gradient-overlay ${className}`}></div>

<style>
  .gradient-overlay {
    position: absolute;
    bottom: -2.5vh;
    left: 50%;
    width: 100vw; /* 1920px relative to viewport width */
    height: 15vh; /* Increased height for better fade */
    transform: translateX(-50%) rotate(0deg);
    opacity: 1;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.1) 25%, rgba(255, 255, 255, 0.5) 55%, rgba(255, 255, 255, 0.75) 80%, #FFFFFF 100%);
    pointer-events: none;
    z-index: 1000;
  }

  /* Mobile styles */
  @media (max-width: 767px) {
    .gradient-overlay {
      bottom: 0;
      height: 200px; /* Fixed height for mobile */
      z-index: 10; /* Above mobile phone image */
      bottom: -1.5vh;
    }
  }
</style>