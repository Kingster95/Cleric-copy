---
// Testimonial section component
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`testimonial ${className}`}>
  <div class="container">
    <div class="testimonial-content">
      <div class="testimonial-image">
        <img src="/testimonial_1.png" alt="Maxime Fouilleul" class="profile-image" />
      </div>
      <div class="testimonial-text">
        <img src="/blablacar-logo.png" alt="BlaBlaCar" class="company-logo-top" />
        <blockquote class="quote desktop-quote">
          "I see Cleric functioning as an SRE companion for our Software Engineers. If one team has already solved an alert, we can apply that knowledge elsewhere."
        </blockquote>
        <blockquote class="quote tablet-quote">
          "I see Cleric functioning as an SRE <br>companion for our Software Engineers.<br> If one team has already solved an alert, we <br> can apply that knowledge elsewhere."
        </blockquote>
        <blockquote class="quote mobile-quote">
          "I see Cleric functioning as an SRE companion for our <br> Software Engineers. If one team <br> has already solved an alert, we <br> can apply that knowledge <br> elsewhere."
        </blockquote>
        <div class="testimonial-author">
          <div class="author-info">
            <img src="/testimonial2.png" alt="Maxime Fouilleul" class="author-avatar" />
            <div class="author-text">
              <div class="company-info">
                <h4 class="company-name">BlaBlaCar</h4>
                <div class="author-details">
                  <p class="author-name">Maxime Fouilleul</p>
                  <p class="author-title">Head of Infrastructure & Operations | BlaBlaCar</p>
                </div>
              </div>
            </div>
          </div>
          <a href="#" class="case-study-btn">Read case study</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonial {
    position: relative;
    background: #FFFFFF;
    width: 100vw;
    height: 520px;
    padding-top: 40px;
    padding-right: 4.17vw; /* 80px / 1920px = 4.17% */
    padding-bottom: 280px;
    padding-left: 4.17vw; /* 80px / 1920px = 4.17% */
    gap: 8px;
    transform: rotate(0deg);
    opacity: 1;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .container {
    width: 1192px;
    height: 320px;
    border-radius: 16px;
    background: linear-gradient(0deg, #F8F8F8 -0.04%, #F7F9FA 100%);
    border: 1px solid #EAEAEA;
    transform: rotate(0deg);
    opacity: 1;
    display: flex;
    align-items: stretch;
    box-sizing: border-box;
    overflow: hidden;
  }

  .testimonial-content {
    display: flex;
    width: 100%;
    height: 100%;
  }

  .testimonial-text {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 320px;
    padding-top: 32px;
    padding-right: 32px;
    padding-bottom: 24px;
    padding-left: 40px;
    gap: 40px;
    transform: rotate(0deg);
    opacity: 1;
    box-sizing: border-box;
    justify-content: center;
  }

  .quote {
    font-family: 'Cleric Sans Text', sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 30px;
    line-height: 140%;
    letter-spacing: -0.0025em;
    font-variant-numeric: stacked-fractions;
    color: rgba(49, 49, 49, 1);
    margin: 0;
  }

  .mobile-quote {
    display: none;
  }

  .tablet-quote {
    display: none;
  }

  .desktop-quote {
    display: block;
  }

  .testimonial-author {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .company-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .company-name {
    font-family: var(--font-family-title);
    font-size: 1.75rem;
    font-weight: 800;
    color: #48484A;
    margin: 0;
    letter-spacing: -0.01em;
  }

  .company-name-top {
    display: none;
    font-family: var(--font-family-title);
    font-size: 1.75rem;
    font-weight: 800;
    color: #48484A;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.01em;
  }

  .company-logo-top {
    display: none;
    width: 132px;
    height: 24px;
    margin: 0 0 1.5rem 0;
    object-fit: contain;
    object-position: left center;
  }

  .author-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-name {
    font-family: 'Cleric Sans Text', sans-serif;
    font-weight: 600;
    font-style: normal;
    font-size: 18px;
    line-height: 140%;
    letter-spacing: 0;
    color: rgba(49, 49, 49, 1);
    margin: 0;
  }

  .author-title {
    font-family: 'Cleric Sans Text', sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 18px;
    line-height: 140%;
    letter-spacing: 0;
    color: rgba(49, 49, 49, 1);
    margin: 0;
  }

  .author-company {
    font-family: 'Cleric Sans Text', sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 18px;
    line-height: 140%;
    letter-spacing: 0;
    color: rgba(49, 49, 49, 1);
    margin: 0;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .author-avatar {
    display: none;
  }

  .author-text {
    flex: 1;
  }

  .case-study-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #000000;
    color: rgba(255, 255, 255, 1);
    width: 166px;
    height: 41px;
    padding: 0;
    border-radius: 150px;
    text-decoration: none;
    font-family: 'Cleric Sans Text', sans-serif;
    font-weight: 500;
    font-style: normal;
    font-size: 15px;
    line-height: 140%;
    letter-spacing: 0;
    text-align: center;
    transition: all var(--transition-normal);
    white-space: nowrap;
  }

  .case-study-btn:hover {
    background: #333333;
    transform: translateY(-1px);
  }

  .testimonial-image {
    width: 320px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: transparent;
  }

  .profile-image {
    width: 320px;
    height: 85%;
    object-fit: cover;
    object-position: center 20%;
    border-radius: 0;
    transform: scale(1.5);
  }

  /* Tablet & Mobile Styles */
  @media (max-width: 991px) {
    .testimonial {
      padding: 4rem 0;
      min-height: 600px;
    }

    .container {
      width: 642px;
      height: 399px;
      border-radius: 16px;
      border-width: 1px;
    }

    .testimonial-content {
      flex-direction: column;
      gap: 0;
      text-align: left;
    }

    .testimonial-image {
      display: none;
    }

    .testimonial-text {
      width: 100%;
      position: relative;
    }

    .company-name-top {
      display: none;
    }

    .company-logo-top {
      display: block !important;
      position: absolute;
      top: 32px;
      left: 32px;
      margin: 0;
    }

    .company-name {
      display: none !important;
    }

    .desktop-quote {
      display: none !important;
    }

    .tablet-quote {
      display: block !important;
    }

    .mobile-quote {
      display: none !important;
    }

    .quote {
      margin: 0;
      font-family: 'Cleric Sans Text', sans-serif;
      font-weight: 400;
      font-style: normal;
      font-size: 28px;
      line-height: 140%;
      letter-spacing: -0.0025em;
      font-variant-numeric: stacked-fractions;
      color: rgba(49, 49, 49, 1);
      margin-top: 5%;
    }

    .testimonial-author {
      padding: 0 32px 32px 32px;
      margin: 0;
      justify-content: space-between;
      text-align: left;
      flex-direction: row;
      align-items: center;
      gap: 1.5rem;
      flex-wrap: nowrap;
    }

    .author-details {
      display: flex;
      flex-direction: column;
      gap: 0;
      align-items: flex-start;
      flex: 1;
      position: absolute;
      left: 112px; /* 32px from left + 72px avatar + 8px gap */
      bottom: 32px;
      width: 316px;
      height: 75px;
    }

    .author-title::before {
      display: none;
    }

    .case-study-btn {
      position: absolute;
      right: 32px;
      bottom: 49px;
      flex-shrink: 0;
      white-space: nowrap;
    }

    .author-avatar {
      display: block;
      width: 72px;
      height: 72px;
      border-radius: 50%;
      object-fit: cover;
      object-position: center;
      position: absolute;
      bottom: 32px;
      left: 32px;
      background-color: #FFFFFF;
      box-shadow: 0 0 0 2px #FFFFFF;
    }

    .quote {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 767px) {
    .testimonial {
      padding: 2rem 0;
    }

    .container {
      width: 408px;
      height: 493px;
      border-radius: 16px;
      border-width: 1px;
    }

    .testimonial-text {
      padding: 32px;
      position: relative;
      display: flex;
      flex-direction: column;
      gap: 24px;
    }

    .testimonial-author {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
      padding: 0;
      margin: 0;
      position: static;
    }

    .author-info {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .case-study-btn {
      position: static;
      align-self: flex-start;
      margin-top: 0;
    }

    .quote {
      padding: 64px 0 24px 0;
      margin: 0;
      font-family: 'Cleric Sans Text', sans-serif;
      font-weight: 400;
      font-style: normal;
      font-size: 24px;
      line-height: 140%;
      letter-spacing: -0.0025em;
      font-variant-numeric: stacked-fractions;
      color: rgba(49, 49, 49, 1);
    }

    .mobile-quote {
      display: block !important;
    }

    .tablet-quote {
      display: none !important;
    }

    .desktop-quote {
      display: none !important;
    }

    .company-name {
      font-size: 1.5rem;
    }

    .author-name {
      font-size: 1rem;
    }

    .author-title {
      font-size: 0.9rem;
    }

    .author-details {
      flex-direction: column;
      gap: 4px;
      align-items: flex-start;
      position: static;
      margin-left: 0;
      width: auto;
      height: auto;
    }

    .author-avatar {
      position: static;
      width: 72px;
      height: 72px;
      border-radius: 50%;
      object-fit: cover;
      object-position: center;
      background-color: #FFFFFF;
      box-shadow: 0 0 0 2px #FFFFFF;
    }

    .author-title::before {
      display: none;
    }
  }
</style>