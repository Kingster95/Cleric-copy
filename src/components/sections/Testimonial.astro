---
// Testimonial section component
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`testimonial ${className}`}>
  <div class="container">
    <div class="testimonial-content">
      <div class="testimonial-image">
        <img src="/testimonial_1.png" alt="Maxime Fouilleul" class="profile-image" />
      </div>
      <div class="testimonial-text">
        <blockquote class="quote">
          "I see Cleric functioning as an SRE companion for our Software Engineers. If one team has already solved an alert, we can apply that knowledge elsewhere."
        </blockquote>
        <div class="testimonial-author">
          <div class="company-info">
            <h4 class="company-name">BlaBlaCar</h4>
            <div class="author-details">
              <p class="author-name">Maxime Fouilleul</p>
              <p class="author-title">Head of Infrastructure & Operations | BlaBlaCar</p>
            </div>
          </div>
          <a href="#" class="case-study-btn">Read case study</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonial {
    position: relative;
    background: #FFFFFF;
    width: 100vw;
    height: 520px;
    padding-top: 40px;
    padding-right: 4.17vw; /* 80px / 1920px = 4.17% */
    padding-bottom: 160px;
    padding-left: 4.17vw; /* 80px / 1920px = 4.17% */
    gap: 8px;
    transform: rotate(0deg);
    opacity: 1;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .container {
    width: 1192px;
    height: 320px;
    border-radius: 16px;
    background: linear-gradient(0deg, #F8F8F8 -0.04%, #F7F9FA 100%);
    border: 1px solid #EAEAEA;
    transform: rotate(0deg);
    opacity: 1;
    display: flex;
    align-items: stretch;
    box-sizing: border-box;
    overflow: hidden;
  }

  .testimonial-content {
    display: flex;
    width: 100%;
    height: 100%;
  }

  .testimonial-text {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 320px;
    padding-top: 32px;
    padding-right: 32px;
    padding-bottom: 24px;
    padding-left: 40px;
    gap: 40px;
    transform: rotate(0deg);
    opacity: 1;
    box-sizing: border-box;
    justify-content: center;
  }

  .quote {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 400;
    font-style: normal;
    font-size: 30px;
    line-height: 140%;
    letter-spacing: -0.25%;
    font-variant-numeric: stacked-fractions;
    color: #313131;
    margin: 0;
  }

  .testimonial-author {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .company-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .company-name {
    font-family: var(--font-family-title);
    font-size: 1.75rem;
    font-weight: 800;
    color: #48484A;
    margin: 0;
    letter-spacing: -0.01em;
  }

  .author-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-name {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 700;
    font-style: normal;
    font-size: 18px;
    line-height: 140%;
    letter-spacing: 0%;
    color: #313131;
    margin: 0;
  }

  .author-title {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 500;
    font-style: normal;
    font-size: 18px;
    line-height: 140%;
    letter-spacing: 0%;
    color: #313131;
    margin: 0;
  }

  .case-study-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #000000;
    color: #FFFFFF;
    padding: 0.75rem 1.5rem;
    border-radius: 2rem;
    text-decoration: none;
    font-family: var(--font-family-subtitle);
    font-size: 0.9rem;
    font-weight: 500;
    transition: all var(--transition-normal);
    white-space: nowrap;
  }

  .case-study-btn:hover {
    background: #333333;
    transform: translateY(-1px);
  }

  .testimonial-image {
    width: 320px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: transparent;
  }

  .profile-image {
    width: 320px;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  /* Mobile Styles */
  @media (max-width: 1023px) {
    .testimonial {
      padding: 3rem 0;
    }

    .testimonial-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      text-align: center;
    }

    .testimonial-author {
      justify-content: center;
      text-align: center;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }

    .quote {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 767px) {
    .testimonial {
      padding: 2rem 0;
    }

    .testimonial-content {
      gap: 2rem;
    }

    .quote {
      font-size: 1.5rem;
    }

    .company-name {
      font-size: 1.5rem;
    }

    .author-name {
      font-size: 1rem;
    }

    .author-title {
      font-size: 0.9rem;
    }
  }
</style>