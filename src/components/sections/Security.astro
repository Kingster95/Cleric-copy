---
// Security section component
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`security ${className}`}>
  <div class="container">
    <div class="security-content">
      <div class="security-left">
        <div class="section-badge">Security-first</div>
        <h2 class="section-title">Paranoid by design</h2>
        <p class="section-description">Read-only by default. Every action logged, every investigation auditable. Your data encrypted everywhere and never used for training. SSO, SAML, RBAC from day one, and pen tested by third parties who actually try to break things.</p>
        <div class="trust-center">
          <span class="trust-link">Learn more in our Trust Center</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 8H13M13 8L8 3M13 8L8 13" stroke="#666666" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>

      <div class="security-right">
        <img src="/security-graphic.png" alt="Security shield graphic" class="security-image" />
      </div>
    </div>
  </div>
</section>

<style>
  .security {
    position: relative;
    background: linear-gradient(0deg, #F8F8F8 -0.04%, #F7F9FA 100%);
    width: 100vw;
    height: clamp(500px, 36.91vw, 708.67px);
    padding-top: clamp(80px, 6.25vw, 120px);
    padding-right: clamp(50px, 4.17vw, 80px);
    padding-bottom: clamp(80px, 6.25vw, 120px);
    padding-left: clamp(50px, 4.17vw, 80px);
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
  }

  .container {
    width: 100%;
    max-width: 1760px;
    margin: 0 auto;
    padding: 0;
  }

  .security-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(40px, 3.33vw, 64px);
    align-items: center;
    justify-items: center;
    height: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .security-left {
    display: flex;
    flex-direction: column;
    width: clamp(400px, 29.17vw, 560px);
    max-width: 560px;
    height: clamp(200px, 13.28vw, 255px);
    gap: clamp(18px, 1.25vw, 24px);
  }

  .section-badge {
    width: 130px;
    height: 32px;
    border-radius: 4px;
    padding-top: clamp(8px, 0.52vw, 10px);
    padding-right: clamp(13px, 0.83vw, 16px);
    padding-bottom: clamp(8px, 0.52vw, 10px);
    padding-left: clamp(13px, 0.83vw, 16px);
    gap: clamp(3px, 0.21vw, 4px);
    transform: rotate(0deg);
    opacity: 1;
    background: #E0E0E0;
    color: rgba(107, 107, 107, 1);
    font-family: 'Cleric Sans Text', sans-serif;
    font-size: 14px;
    font-weight: 500;
    font-style: normal;
    line-height: 120%;
    letter-spacing: -0.0025em;
    text-align: center;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    box-sizing: border-box;
    letter-spacing: -0.0025em;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
  }

  .section-title {
    font-family: 'GT Alpina', var(--font-family-title);
    font-weight: 500;
    font-style: normal;
    font-size: clamp(32px, 2.5vw, 48px);
    line-height: 114.99999999999999%;
    letter-spacing: -0.005em;
    color: #313131;
    margin: 0;
  }

  .section-description {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 500;
    font-style: normal;
    font-size: clamp(16px, 0.94vw, 18px);
    line-height: 140%;
    letter-spacing: 0;
    color: #6B6B6B;
    margin: 0;
    vertical-align: middle;
  }

  .trust-center {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
  }

  .trust-link {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 500;
    font-style: normal;
    font-size: 15px;
    line-height: 140%;
    letter-spacing: 0;
    color: #666666;
    text-align: center;
    vertical-align: middle;
    text-decoration: underline;
    text-decoration-style: solid;
  }

  .security-right {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .security-image {
    width: clamp(400px, 30.83vw, 592px);
    height: clamp(320px, 24.41vw, 468.67px);
    object-fit: cover;
    border-radius: 8px;
  }

  /* Mobile Styles */
  /* Tablet Styles */
