---
// How It Works section component
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`how-it-works ${className}`}>
  <div class="container">
    <div class="section-header">
      <div class="section-badge">How it works</div>
      <h2 class="section-title">Meet Cleric</h2>
      <p class="section-subtitle">Cleric investigates problems, surfaces answers, and learns from your engineers.</p>
    </div>
    <div class="diagram-container">
      <img src="/diagram.png" alt="How Cleric Works - Platform Engineering, Application Engineering, and SRE workflow diagram" class="diagram-image desktop-diagram" />
      <img src="/diagram-square.png" alt="How Cleric Works - Platform Engineering, Application Engineering, and SRE workflow diagram" class="diagram-image mobile-diagram" />
    </div>
  </div>
</section>

<style>
  .how-it-works {
    position: relative;
    background: linear-gradient(0deg, #F8F8F8 -0.04%, #F7F9FA 100%);
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .container {
    width: 1370px;
    margin: 0 auto;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 3.45rem;
  }

  .section-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.15rem;
    max-width: 920px;
  }

  .section-badge {
    width: 119px;
    height: 32px;
    border-radius: 4px;
    padding-top: clamp(8px, 0.52vw, 10px);
    padding-right: clamp(13px, 0.83vw, 16px);
    padding-bottom: clamp(8px, 0.52vw, 10px);
    padding-left: clamp(13px, 0.83vw, 16px);
    gap: clamp(3px, 0.21vw, 4px);
    transform: rotate(0deg);
    opacity: 1;
    background: #E0E0E0;
    color: rgba(107, 107, 107, 1);
    font-family: 'Cleric Sans Text', sans-serif;
    font-size: 14px;
    font-weight: 400;
    font-style: normal;
    line-height: 120%;
    letter-spacing: -0.0025em;
    text-align: center;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    box-sizing: border-box;
  }

  .section-title {
    font-family: 'GT Alpina', var(--font-family-title);
    font-weight: 400;
    font-style: normal;
    font-size: clamp(32px, 2.5vw, 48px);
    line-height: 114.99999999999999%;
    letter-spacing: -0.005em;
    text-align: center;
    vertical-align: bottom;
    color: #313131;
    margin: 0;
  }

  .section-subtitle {
    font-family: 'Cleric Sans Text', var(--font-family-subtitle);
    font-weight: 400;
    font-style: normal;
    font-size: 24px;
    line-height: 125%;
    letter-spacing: 0.0075em;
    text-align: center;
    color: #6B6B6B;
    margin: 0;
  }

  .diagram-container {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .diagram-image {
    width: 1370px;
    height: auto;
    border-radius: 0;
    box-shadow: none;
  }

  .mobile-diagram {
    display: none;
  }

  .desktop-diagram {
    display: block;
  }

  /* Tablet Styles */
  @media (max-width: 991px) and (min-width: 768px) {
    .how-it-works {
      width: 834px;
      height: 1045px;
    }

    .section-title {
      font-family: 'GT Alpina';
      font-weight: 400;
      font-style: normal;
      font-size: 44px;
      line-height: 115%;
      letter-spacing: -0.005em;
      text-align: center;
      vertical-align: bottom;
      color: rgba(49, 49, 49, 1);
    }

    .section-subtitle {
      font-family: 'Cleric Sans Text';
      font-weight: 400;
      font-style: normal;
      font-size: 20px;
      line-height: 125%;
      letter-spacing: 0.0075em;
      text-align: center;
      color: rgba(107, 107, 107, 1);
    }

    .desktop-diagram {
      display: none;
    }

    .mobile-diagram {
      display: block;
    }
  }

  /* Mobile Styles */
  @media (max-width: 767px) {
    .how-it-works {
      width: 440px;
      height: 677px;
      padding: 3rem 0;
    }

    .container {
      gap: 2rem;
    }

    .section-title {
      font-family: 'GT Alpina';
      font-weight: 400;
      font-style: normal;
      font-size: 36px;
      line-height: 115%;
      letter-spacing: -0.005em;
      text-align: center;
      vertical-align: bottom;
      color: rgba(49, 49, 49, 1);
    }

    .section-subtitle {
      font-family: 'Cleric Sans Text';
      font-weight: 400;
      font-style: normal;
      font-size: 18px;
      line-height: 125%;
      letter-spacing: 0.0075em;
      text-align: center;
      color: rgba(107, 107, 107, 1);
    }

    .desktop-diagram {
      display: none;
    }

    .mobile-diagram {
      display: block;
      width: 408px;
      height: 366.0560607910156px;
      border-radius: var(--radius-md);
    }
  }
</style>