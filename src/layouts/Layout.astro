---
export interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Cleric - The AI SRE That Learns From Your Engineers",
	description = "Cleric investigates production issues, captures what works, and makes your whole team faster."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/footer-icon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />

		<!-- Prevent search engine indexing -->
		<meta name="robots" content="noindex, nofollow, noarchive, nosnippet, noimageindex" />
		<meta name="googlebot" content="noindex, nofollow" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

		<!-- GT Alpina Font (using similar serif font as fallback) -->
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

		<!-- Cleric Sans Text Font (using similar sans-serif font as fallback) -->
		<link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* CSS Variables */
	:root {
		/* Cleric Brand Colors */
		--color-cleric-primary: #4361EE;
		--color-cleric-blue: #4361EE;
		--color-cleric-blue-dark: #3046D1;
		--color-cleric-blue-light: #5B73F0;

		/* Hero Section Colors */
		--color-hero-bg: linear-gradient(135deg, #4361EE 0%, #7209b7 35%, #f72585 100%);
		--color-hero-text: #ffffff;
		--color-hero-text-secondary: rgba(255, 255, 255, 0.9);

		/* Navigation Colors */
		--color-nav-text: #ffffff;
		--color-nav-text-hover: rgba(255, 255, 255, 0.8);

		/* Button Colors */
		--color-btn-primary: #ffffff;
		--color-btn-primary-text: #4361EE;
		--color-btn-secondary: transparent;
		--color-btn-secondary-text: #ffffff;
		--color-btn-secondary-border: rgba(255, 255, 255, 0.3);

		/* Interface Mockup Colors */
		--color-mockup-bg: #ffffff;
		--color-mockup-border: rgba(255, 255, 255, 0.2);

		/* Typography */
		--font-family-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
		--font-family-title: 'GT Alpina', 'Playfair Display', Georgia, serif;
		--font-family-subtitle: 'Cleric Sans Text', 'Source Sans 3', 'Inter', sans-serif;

		/* Font Sizes */
		--font-size-hero-title: clamp(48px, 6vw, 72px);
		--font-size-hero-subtitle: clamp(18px, 2vw, 24px);
		--font-size-nav: 0.9rem;
		--font-size-btn: 0.9rem;
		--font-size-hero-btn: 18px;

		/* Spacing */
		--space-xs: 0.25rem;
		--space-sm: 0.5rem;
		--space-md: 1rem;
		--space-lg: 1.5rem;
		--space-xl: 2rem;
		--space-2xl: 3rem;
		--space-3xl: 4rem;
		--space-4xl: 5rem;

		/* Border Radius */
		--radius-sm: 0.375rem;
		--radius-md: 0.75rem;
		--radius-lg: 1rem;
		--radius-xl: 1.5rem;
		--radius-btn: 1.5rem; /* More rounded buttons */
		--radius-header-btn: 150px; /* Header button super rounded */
		--radius-hero-btn: 123.15px; /* Hero buttons super rounded */
		--radius-press-badge: 6px; /* Press badge border radius */

		/* Shadows */
		--shadow-hero-mockup: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
		--shadow-btn: 0 4px 14px 0 rgba(0, 0, 0, 0.1);

		/* Container */
		--container-max-width: 1200px;
		--container-padding: var(--space-lg);
		--header-width: 85%; /* Header at 85% width */

		/* Main Container - Relative/Percentage Based */
		--main-container-width: 100vw;
		--main-container-height: 100vh;
		--main-container-padding-top: 0;
		--main-container-padding-right: 0;
		--main-container-padding-bottom: 0;
		--main-container-padding-left: 0;
		--main-container-gap: 2vw;

		/* Transitions */
		--transition-fast: 0.15s ease-out;
		--transition-normal: 0.3s ease-out;

		/* Z-index */
		--z-header: 1000;
		--z-mockup: 100;
	}

	/* Reset and Base Styles */
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	* {
		margin: 0;
		padding: 0;
	}

	html,
	body {
		height: 100%;
		overflow-x: hidden;
		max-width: 100vw;
		font-family: var(--font-family-primary);
	}

	body {
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
		background-color: #ffffff;
	}

	img,
	picture,
	video,
	canvas,
	svg {
		display: block;
		max-width: 100%;
	}

	input,
	button,
	textarea,
	select {
		font: inherit;
	}

	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		overflow-wrap: break-word;
	}

	/* Focus styles for accessibility */
	*:focus {
		outline: 2px solid var(--color-cleric-primary);
		outline-offset: 2px;
	}

	/* Smooth scrolling */
	html {
		scroll-behavior: smooth;
	}

	/* Remove default button styles */
	button {
		background: none;
		border: none;
		cursor: pointer;
	}

	/* Remove default link styles */
	a {
		color: inherit;
		text-decoration: none;
	}

	/* Remove default list styles */
	ul,
	ol {
		list-style: none;
	}
</style>
